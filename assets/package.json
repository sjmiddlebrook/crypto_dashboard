{
  "scripts": {
    "build_css": "NODE_ENV=production tailwindcss --postcss --minify --input=css/app.css --output=../priv/static/assets/app.css",
    "build_js": "NODE_PATH=../deps esbuild js/app.js --bundle --outfile=../priv/static/assets/app.js",
    "deploy": "npm run build_css & npm run build_js"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.3",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^2.2.19"
  },
  "dependencies": {
    "alpinejs": "^3.5.2",
    "esbuild": "^0.14.2"
  }
}
